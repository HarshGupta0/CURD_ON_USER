<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Back To Home</a>
        <h1 class="text-3xl mb-3 tracking-tighter">All Users</h1>
        <% if (users.length > 0) { %>
            <div class="users flex gap-2 flex-wrap">
                <% users.forEach(function(user) { %>
                    <div class="user w-72 p-5 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-400 overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%=user.img %>" alt="">
                        </div>
                        <h3 class="text-2xl mt-3 tracking-tighter"><%= user.userName %></h3>
                        <h5 class="text-zinc-400"><%= user.email %></h5>
                        <div class="flex gap-3 mt-2">
                            <a class="text-zinc-300" href="/edit/<%=user._id%>">Edit User</a>
                            <a class="text-red-400" href="/delete/<%=user._id%>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <h2 class="text-zinc-500 text-center">No User Found</h2>
        <% } %>
    </div>
</body>
</html>
